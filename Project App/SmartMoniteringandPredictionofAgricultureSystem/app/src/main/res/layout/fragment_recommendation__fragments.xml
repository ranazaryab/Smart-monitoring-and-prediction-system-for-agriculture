<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recommendation_Fragments"
    android:orientation="vertical"
    android:background="@color/nav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Recommendation"
            android:textColor="#ffffff"
            android:textSize="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="150dp"
            android:fontFamily="cursive"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/crop_recommend_layout"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            app:boxBackgroundColor="@color/trans"
            android:background="@color/trans"
            android:hint="Enter Crop"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="clear_text"
            app:helperTextTextColor="@color/red">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/croprecommend"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:digits="abcdefghijklmnopqrstuvwxyz"
                android:background="@drawable/btn"
                android:maxLength="20"
                android:textColorHint="#FFFBF8"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/result"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btncolor"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="#FFFBF8"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Requirements for Crop:"
            android:fontFamily="cursive"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:layout_marginTop="50dp"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/Nitrogen_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Nitrogen"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:visibility="invisible"
                android:paddingLeft="60dp"/>
        <TextView
            android:id="@+id/Nitrogen_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Nitrogen"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:visibility="invisible"
            android:paddingLeft="60dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:gravity="start"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/Phosphorus_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Phosphorus"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:visibility="invisible"
            android:paddingLeft="60dp"/>
        <TextView
            android:id="@+id/Phosphorus_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Phosphorus"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:visibility="invisible"
            android:paddingLeft="60dp"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/Potassium_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Potassium"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:visibility="invisible"
                android:paddingLeft="60dp"/>
            <TextView
                android:id="@+id/Potassium_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Potassium"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:visibility="invisible"
                android:paddingLeft="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/Temp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Temperature"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:visibility="invisible"
                android:paddingLeft="60dp"/>
            <TextView
                android:id="@+id/Temp_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Temp"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:visibility="invisible"
                android:paddingLeft="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/humidity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Humidity"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:visibility="invisible"
                android:paddingLeft="60dp"/>
            <TextView
                android:id="@+id/humidity_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Humidity"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:visibility="invisible"
                android:paddingLeft="60dp"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>

