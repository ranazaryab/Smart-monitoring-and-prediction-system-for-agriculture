<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prediction_Fragments"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nav">


    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Prediction"
            android:textColor="#ffffff"
            android:textSize="42dp"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/nav">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/Nitrogen_ProgressBar"
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        app:cpb_background_progressbar_color="@color/white"
                        app:cpb_background_progressbar_width="10dp"
                        app:cpb_progress="40"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#3f51b5"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_round_border="false" />

                    <TextView
                        android:id="@+id/Nitrogen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="40%"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Nitrogen_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="200dp"
                        android:fontFamily="cursive"
                        android:text="Nitrogen"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/nav">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/Phosphorus_ProgressBar"
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        app:cpb_background_progressbar_color="@color/white"
                        app:cpb_background_progressbar_width="10dp"
                        app:cpb_progress="79"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#3f51b5"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_round_border="false" />

                    <TextView
                        android:id="@+id/Phosphorus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="79%"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Phosphorus_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="200dp"
                        android:fontFamily="cursive"
                        android:text="Phosphorus"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/nav">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/Potassium_ProgressBar"
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        app:cpb_background_progressbar_color="@color/white"
                        app:cpb_background_progressbar_width="10dp"
                        app:cpb_progress="20"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#3f51b5"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_round_border="false" />

                    <TextView
                        android:id="@+id/Potassium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="20%"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Potassium_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="200dp"
                        android:fontFamily="cursive"
                        android:text="Potassium"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/nav">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/PTemp_ProgressBar"
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        app:cpb_background_progressbar_color="@color/white"
                        app:cpb_background_progressbar_width="10dp"
                        app:cpb_progress="20"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#3f51b5"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_round_border="false" />

                    <TextView
                        android:id="@+id/PTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="20%"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/PTemperature_Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="200dp"
                        android:fontFamily="cursive"
                        android:text="Temperature"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@color/nav">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/PHumidity_ProgressBar"
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        app:cpb_background_progressbar_color="@color/white"
                        app:cpb_background_progressbar_width="10dp"
                        app:cpb_progress="20"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#3f51b5"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_round_border="false" />

                    <TextView
                        android:id="@+id/PHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="20%"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/PHumidity_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="200dp"
                        android:fontFamily="cursive"
                        android:text="Humidity"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Crop:"
                android:textColor="@color/redish"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:visibility="invisible"
                android:fontFamily="cursive"/>
            <TextView
                android:id="@+id/tvLabell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="125dp"
                android:visibility="invisible"
                android:fontFamily="cursive"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>