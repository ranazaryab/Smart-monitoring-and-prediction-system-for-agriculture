<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credentials_Fragments"
    android:background="@color/nav"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">
        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Credentials"
            android:textColor="#ffffff"
            android:textSize="42dp"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"/>


            //Email
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userlayout"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="125dp"
            app:boxBackgroundColor="@color/trans"
            android:background="@color/trans"
            android:hint="Email"
            app:counterEnabled="true"
            app:counterMaxLength="40"
            app:endIconMode="clear_text"
            app:helperTextTextColor="@color/red">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userinput"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/btn"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:textColorHint="#FFFBF8" />

        </com.google.android.material.textfield.TextInputLayout>
            <!-- Old Password Input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/oldpasslayout"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                app:boxBackgroundColor="@color/trans"
                android:background="@color/trans"
                android:hint="Old Password"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:endIconMode="password_toggle"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/oldpassinput"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn"
                    android:enabled="true"
                    android:inputType="textPassword"
                    android:maxLength="11"
                    android:textColorHint="#FFFBF8" />
            </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/newpass_layout"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            app:boxBackgroundColor="@color/trans"
            android:background="@color/trans"
            android:hint="New Password"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="password_toggle"
            app:helperTextTextColor="@color/red">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newpass_input"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/btn"
                android:enabled="true"
                android:inputType="textPassword"
                android:maxLength="11"
                android:textColorHint="#FFFBF8" />
        </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/change_pass"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btncolor"
                android:text="Change Password"
                android:textAllCaps="false"
                android:textColor="#FFFBF8"
                android:textSize="18dp" />



        </LinearLayout>



</ScrollView>